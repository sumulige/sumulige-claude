{
  "enabled": true,
  "severity": "warn",

  "planGate": {
    "enabled": true,
    "mode": "block",
    "exempt": [".md", ".json", ".test.", ".spec.", "__tests__", ".claude/"]
  },

  "liveQuality": {
    "enabled": true,
    "maxFileLines": 800,
    "maxFunctionLines": 50
  },

  "verify": {
    "enabled": true,
    "coverageMinimum": 80,
    "phases": {
      "sanity": true,
      "format": true,
      "test": true,
      "security": true,
      "diff": true
    },
    "blockOn": ["sanity-fail", "test-fail", "coverage-low", "secrets-found"],
    "warnOn": ["format-issues", "console-logs", "todo-comments"]
  },
  "rules": [
    {
      "id": "line-count-limit",
      "enabled": true,
      "severity": "warn",
      "config": {
        "maxLines": 3000,
        "exclude": [
          "node_modules/**",
          "package-lock.json",
          ".claude/skills/**",
          "lib/commands.js"
        ]
      }
    },
    {
      "id": "file-size-limit",
      "enabled": true,
      "severity": "warn",
      "config": {
        "maxSize": 819200
      }
    },
    {
      "id": "no-empty-files",
      "enabled": true,
      "severity": "warn"
    },
    {
      "id": "no-trailing-whitespace",
      "enabled": true,
      "severity": "warn"
    },
    {
      "id": "todo-comments",
      "enabled": true,
      "severity": "info"
    },
    {
      "id": "directory-depth",
      "enabled": false,
      "severity": "warn"
    },
    {
      "id": "no-console-logs",
      "enabled": true,
      "severity": "warn"
    },
    {
      "id": "function-length",
      "enabled": true,
      "severity": "warn",
      "config": {
        "maxLines": 50
      }
    },
    {
      "id": "changelog-version-sync",
      "enabled": true,
      "severity": "error"
    }
  ],
  "gates": {
    "preCommit": true,
    "prePush": true,
    "onToolUse": false
  },
  "reporting": {
    "format": "console",
    "outputFile": null
  }
}
